{
    "$schema": "https://turbo.build/schema.json",
    "pipeline": {
        "build": {
            "outputs": [
                ".next/**",
                "!.next/cache/**"
            ],
            "inputs": [
                "src/**"
            ],
            "env": [
                "NEXT_PUBLIC_*"
            ]
        },
        "build:next": {
            "outputs": [
                ".next/**",
                "!.next/cache/**"
            ],
            "inputs": [
                "src/**"
            ],
            "env": [
                "NEXT_PUBLIC_*"
            ]
        },
        "lint": {
            "inputs": [
                "src/**"
            ],
            "env": [
                "NEXT_PUBLIC_*"
            ]
        },
        "lint:nofix": {
            "inputs": [
                "src/**"
            ],
            "env": [
                "NEXT_PUBLIC_*"
            ]
        },
        "test": {
            "inputs": [
                "src/**/*.test.tsx",
                "src/**/*.test.ts",
                "src/**/*.test.js"
            ]
        },
        "dev": {
            "persistent": true
        }
    },
    "globalDependencies": [
        "tsconfig.json",
        "jest.config.js",
        ".eslintrc",
        ".env.*",
        "biome.json"
    ]
}