{
    "jsc": {
        "parser": {
            "syntax": "typescript",
            "tsx": true,
            "decorators": true,
            "dynamicImport": true
        },
        "target": "es2020",
        "keepClassNames": true,
        "transform": {
            "legacyDecorator": true,
            "decoratorMetadata": true
        },
        "baseUrl": "./",
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "$/*": [
                "./src/components/*"
            ]
        }
    },
    "module": {
        "type": "commonjs",
        "noInterop": true
    },
    "minify": true
}